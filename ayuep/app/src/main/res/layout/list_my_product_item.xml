<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/id_product_item"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/id_product_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorDashboardBackgroud"/>
        <TextView
            android:id="@+id/id_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_product_image"
            android:layout_alignBottom="@+id/id_product_image"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="14dp"
            android:textSize="25dp"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/id_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id_product_price"
            android:text="1234"
            android:textSize="25dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignLeft="@+id/id_product_price"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_seperator_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/id_product_item"
        android:background="@color/colorLine"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/id_seperator_line">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="预览"
            android:textSize="20dp"
            android:background="@color/colorWhiteColor"
            android:textColor="@color/colorTitle"/>
    </LinearLayout>

</RelativeLayout>