<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommonBackgroud">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请核对下面信息:"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteColor">
        <TextView
            android:id="@+id/id_store_order_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:text="wangyousfdsfdsafdsfdsfsdkljlkninlkfndslheng"
            android:lines="1"
            android:layout_toRightOf="@+id/id_store_order_customer_phone"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:ellipsize="end"
            android:maxWidth="200dp"/>

        <TextView
            android:id="@+id/id_store_order_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="188017615551"
            android:lines="1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/id_store_order_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="20dp"
            android:background="@color/colorWhiteColor"
            android:layout_below="@+id/id_store_order_customer_name"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/id_store_order_customer_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11111"

        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="20dp"/>

    <DatePicker
     android:id="@+id/dpPicker"
     android:calendarViewShown="false"

     android:layout_width="match_parent"
     android:layout_height="wrap_content" />


</LinearLayout>

